---
import AutoLink from '../AutoLink.astro'
import type { NavItemWithLink } from '~/types'

export interface Props {
  item: NavItemWithLink
}
const { text, target, link, rel } = Astro.props.item
---

<AutoLink
  class="nav-screen-menu-link nav-screen-link-item"
  {text}
  {target}
  {rel}
  href={link}
/>

<style>
  .nav-screen-menu-link {
    display: block;
    border-bottom: 1px solid var(--c-divider);
    padding: 12px 0 11px;
    line-height: 24px;
    font-size: 14px;
    font-weight: 500;
    color: var(--c-text-1);
    transition: border-color 0.25s, color 0.25s;
  }

  .nav-screen-menu-link:hover {
    color: var(--c-brand);
  }
</style>
