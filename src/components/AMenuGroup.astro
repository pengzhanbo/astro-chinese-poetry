---
import AMenuLink from './AMenuLink.astro'
import type { NavItemWithLink } from '~/types'

export interface Props {
  text?: string
  items: NavItemWithLink[]
}

const { text, items } = Astro.props
---

<div class="menu-group">
  {text && <p class="title">{text}</p>}
  {items.map((item) => <AMenuLink item={item} />)}
</div>

<style>
  .menu-group {
    margin: 12px -12px 0;
    border-top: 1px solid var(--c-divider);
    padding: 12px 12px 0;
  }

  .menu-group:first-child {
    margin-top: 0;
    border-top: 0;
    padding-top: 0;
  }

  .menu-group + .menu-group {
    margin-top: 12px;
    border-top: 1px solid var(--c-divider);
  }

  .title {
    padding: 0 12px;
    margin: 0;
    line-height: 32px;
    font-size: 14px;
    font-weight: 600;
    color: var(--c-text-2);
    white-space: nowrap;
    transition: color 0.25s;
  }
</style>
