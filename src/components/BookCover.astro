---
import type { BaseProps } from '~/types'

export interface Props extends BaseProps {
  title: string
}

const className = Astro.props['class:list'] || Astro.props.class
const title = Astro.props.title.split('')
---

<div class:list={['book-cover', className]}>
  <div class="book-cover-container">
    <div class="title">{title.map((t) => <span>{t}</span>)}</div>
  </div>
  <div class="bg">
    <div class="img"></div>
  </div>
  <div class="binding"></div>
</div>

<style>
  .book-cover {
    position: relative;
    width: 140px;
    height: 198px;
  }
  .book-cover .book-cover-container {
    position: absolute;
    top: 14px;
    left: 10px;
    background: #b4d5e9;
    z-index: 2;
    padding: 2px;
  }

  .book-cover .title {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    width: calc(1em + 16px);
    min-height: 100px;
    border: solid 2px #1e3660;
    color: #000;
    font-weight: 400;
    text-align: center;
    line-height: 1;
    font-size: 17px;
  }
  .book-cover .title span {
    margin: 5px 0;
  }

  .book-cover .bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #1e3660;
    overflow: hidden;
    border-radius: 2px;
    z-index: 1;
  }
  .book-cover .bg .img {
    position: absolute;
    bottom: 0;
    right: 15px;
    width: 100px;
    height: 100px;
    background: url(/book-cover.png) no-repeat top left;
    background-size: cover;
    filter: invert(100%);
    opacity: 0.25;
  }

  .book-cover .binding {
    position: absolute;
    top: 0;
    right: 15px;
    width: 2px;
    height: 100%;
    background-color: #f1f1f1;
    z-index: 1;
  }
  .book-cover .binding::after,
  .book-cover .binding::before {
    content: '';
    position: absolute;
    left: 2px;
    width: 15px;
    height: 54px;
    border-top: solid 2px #f1f1f1;
    border-bottom: solid 2px #f1f1f1;
  }
  .book-cover .binding::after {
    top: 18px;
  }
  .book-cover .binding::before {
    bottom: 18px;
  }
</style>
