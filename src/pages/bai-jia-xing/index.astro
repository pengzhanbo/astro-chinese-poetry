---
import Breadcrumb from '~/components/Breadcrumb.astro'
import PostAbstract from '~/components/PostAbstract.astro'
import PostContent from '~/components/PostContent.astro'
import { baiJiaXing, books } from '~/config/books'
import { Books } from '~/config/site'
import Layout from '~/layouts/Layout.astro'

const { title, abstract } = books[Books.baijiaxing]
const { title: postTitle, paragraphs, tags, author } = baiJiaXing.traditional
---

<Layout title={title}>
  <div class="py-6 px-5 md:px-10">
    <Breadcrumb list={[{ text: title, active: true }]} />
    <PostAbstract class="max-w-3xl mx-auto" {title} {abstract} />
    <div class="pt-6 text-center">
      <h3 class="text-2xl font-bold text-brand mt-10 mb-4">
        {postTitle}
      </h3>
      <p class="flex justify-center items-center text-text-2">
        <span class="mr-4">[{author}]</span>
        <span>[{tags}]</span>
      </p>
      <PostContent content={paragraphs} />
    </div>
  </div>
</Layout>
