---
import { toArray } from '@pengzhanbo/utils'
import Breadcrumb from '~/components/Breadcrumb.astro'
import PostContent from '~/components/PostContent.astro'
import { baiJiaXing, books } from '~/config/books'
import { Books } from '~/config/site'
import Layout from '~/layouts/Layout.astro'

const book = books[Books.baijiaxing]

const { title, abstract } = book
const descriptions = toArray(abstract)
---

<Layout title={title}>
  <div class="py-6 px-5 md:px-10">
    <Breadcrumb list={[{ text: title, active: true }]} />
    <div class="py-6 max-w-3xl mx-auto border-b border-b-border">
      {descriptions.map((desc) => <p class="px-4">{desc}</p>)}
    </div>
    <div class="pt-6 text-center">
      <h3 class="text-2xl font-bold text-brand mt-10 mb-4">
        {baiJiaXing.title}
      </h3>
      <p class="flex justify-center items-center text-text-2">
        <span class="mr-4">[{baiJiaXing.author}]</span>
        <span>[{baiJiaXing.tags}]</span>
      </p>
      <PostContent content={baiJiaXing.paragraphs} />
    </div>
  </div>
</Layout>
