---
import '@fontsource/noto-sans-tc/chinese-traditional.css'
import '~/styles/index.scss'

import LayoutContent from '~/components/LayoutContent.astro'
import LocalNav from '~/components/LocalNav.astro'
import Navbar from '~/components/Navbar/index.astro'
import PageFooter from '~/components/PageFooter.astro'
import Siderbar from '~/components/Sidebar/Siderbar.astro'
import { siteTitle } from '~/config/site'

export interface Props {
  title?: string
}

const { title } = Astro.props
const pageTitle = title ? `${title} | ${siteTitle}` : siteTitle
---

<!DOCTYPE html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link rel="icon" type="image/png" href="/logo.png" />
    <meta name="generator" content={Astro.generator} />
    <script is:inline>
      // eslint-disable-next-line @typescript-eslint/no-extra-semi, prettier/prettier
      ;(function () {
        const userMode = localStorage.getItem('poetry-appearance')
        const systemDarkMode =
          window.matchMedia &&
          window.matchMedia('(prefers-color-scheme: dark)').matches
        if (userMode === 'dark' || (userMode !== 'light' && systemDarkMode)) {
          document.documentElement.classList.add('dark')
        }
      })()
    </script>
    <title>{pageTitle}</title>
  </head>
  <body>
    <div class="min-h-full w-full">
      <Navbar />
      <LocalNav />
      <Siderbar />
      <LayoutContent>
        <slot />
        <PageFooter />
      </LayoutContent>
    </div>
  </body>
</html>
