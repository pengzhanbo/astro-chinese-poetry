---
import '@fontsource/noto-sans-tc/chinese-traditional.css'
import '~/styles/index.scss'

import LayoutContent from '~/components/LayoutContent.astro'
import LocalNav from '~/components/LocalNav.astro'
import Navbar from '~/components/Navbar/index.astro'
import Siderbar from '~/components/Sidebar/Siderbar.astro'
import { siteTitle } from '~/config/site'

export interface Props {
  title?: string
}

const { title } = Astro.props
const pageTitle = title ? `${title} | ${siteTitle}` : siteTitle
const appearanceScript =
  ";(function(){var um=localStorage.getItem('poetry-appearance');var sdm=window.matchMedia&&window.matchMedia('(prefers-color-scheme: dark)').matches;if(um==='dark'||(um!=='light'&&sdm)){document.documentElement.classList.add('dark');}})();"
---

<!DOCTYPE html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="中国古典文学，中国古诗词，蒙学，四书五经"
    />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link rel="icon" type="image/png" href="/logo.png" />
    <meta name="generator" content={Astro.generator} />
    <script set:html={appearanceScript} />
    <title>{pageTitle}</title>
  </head>
  <body>
    <div class="min-h-full w-full">
      <Navbar />
      <LocalNav />
      <Siderbar />
      <LayoutContent>
        <slot />
      </LayoutContent>
    </div>
  </body>
</html>
