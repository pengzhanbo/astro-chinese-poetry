---
import { toArray } from '@pengzhanbo/utils'
import Layout from './Layout.astro'
import Breadcrumb from '~/components/Breadcrumb.astro'
import { books } from '~/config/books'
import type { Books } from '~/config/site'

export interface Props {
  book: Books
}

const book = books[Astro.props.book]

const { title, abstract } = book
const descriptions = toArray(abstract)
---

<Layout title={title}>
  <div class="py-6 px-5 md:px-10">
    <Breadcrumb list={[{ text: title, active: true }]} />
    <div class="pt-6">
      <h3 class="text-2xl font-bold text-brand mt-10 mb-4 text-center">
        《{title}》
      </h3>
      {descriptions.map((desc) => <p class="px-4">{desc}</p>)}
    </div>
  </div>
</Layout>
